    //en el else se ejecutara si la expresion es  falsa 
    
    if (false) {
    console.log("hola")
    } else {
    console.log("adios")
    }
    adios 
    
    // como la expresion es falsa se ejecutara la variable que correspoda en ese caso la palabara adios 
    
    
